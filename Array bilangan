import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        ArrayList<Integer> data = new ArrayList<>();

        System.out.println("Masukkan angka (ketik angka negatif untuk berhenti):");
        while (true) {
            int x = s.nextInt();
            if (x < 0) break;   // sentinel (berhenti kalau negatif)
            data.add(x);        // tambahkan ke ArrayList
        }

        if (data.isEmpty()) {
            System.out.println("Tidak ada data yang dimasukkan!");
        } else {
            int hasil = data.get(0); // anggap elemen pertama sebagai nilai awal tertinggi
            int indeks = 0;          // simpan indeks maksimum

            for (int i = 1; i < data.size(); i++) {
                if (data.get(i) > hasil) {
                    hasil = data.get(i);
                    indeks = ++i;
                }
            }

            System.out.println("Data yang dimasukkan: " + data);
            System.out.println("Jumlah data: " + data.size());
            System.out.println("Maka nilai tertinggi adalah " + hasil + " dengan indeks ke-" + indeks);
        }

        s.close();
    }
}
