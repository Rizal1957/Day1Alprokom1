import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        ArrayList<Integer> data = new ArrayList<>();

        System.out.println("Masukkan angka (ketik angka negatif untuk berhenti):");
        while (true) {
            int x = s.nextInt();
            if (x < 0) break;   // berhenti kalau negatif
            data.add(x);
        }

        if (data.isEmpty()) {
            System.out.println("Tidak ada data yang dimasukkan!");
        } else {
            int hasil = data.get(0); 
            int indeks = 0;         

            for (int i = 1; i < data.size(); i++) {
                if (data.get(i) > hasil) {
                    hasil = data.get(i);
                    indeks = ++i;
                }
            }

            System.out.println("Maka data yang dimasukkan adalah " + data + 
                               " dengan banyak data: " + data.size());
            System.out.println("Maka nilai tertinggi adalah " + hasil + 
                               " dengan indeks ke-" + indeks);
        }

        s.close();
    }
}
