import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);

        System.out.print("Masukkan sebuah nilai: ");
        int n = s.nextInt();
        int total=0;
        
        while(n>0){
            total+=n%3;
            n-=2;
        }
        System.out.println(total);
    }
}
